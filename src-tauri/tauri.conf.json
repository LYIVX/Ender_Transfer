{
  "build": {
    "beforeDevCommand": "npm run dev:web",
    "beforeBuildCommand": "npm run build:web",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Ender Transfer",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "dialog": {
        "all": true
      },
      "fs": {
        "all": true,
        "scope": ["**"]
      },
      "shell": {
        "open": true
      },
      "path": {
        "all": true
      }
    },
    "security": {
      "csp": null,
      "dangerousRemoteDomainIpcAccess": [
        {
          "scheme": "http",
          "domain": "localhost",
          "windows": ["main"],
          "enableTauriAPI": true
        }
      ]
    },
    "windows": [
      {
        "label": "main",
        "title": "Ender Transfer",
        "width": 1200,
        "height": 760,
        "minWidth": 980,
        "minHeight": 620,
        "resizable": true
      }
    ],
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.ftpbrowser.app",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/256x256.png",
        "icons/256x256@2x.png",
        "icons/512x512.png",
        "icons/icon.ico"
      ]
    },
    "systemTray": {
      "iconPath": "icons/icon.ico"
    }
  }
}
